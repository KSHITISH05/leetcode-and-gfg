#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    long  ones=0;
	    
	    string s;
	    cin>>s;
	    for(int i=0;i<n;i++)
	    {
	        if(s[i]=='1')
	        {
	            ones++;
	        }
	    }
	    long ans=((ones+1)*(ones))/2;
	    cout<<ans<<endl;
	}
	return 0;
	
}
